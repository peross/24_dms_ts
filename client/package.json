{
  "name": "dms-client",
  "version": "0.1.0",
  "description": "Desktop client for the document management system",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "run-p watch:main watch:preload dev:renderer start:electron",
    "watch:main": "tsc -p tsconfig.main.json --watch",
    "watch:preload": "tsc -p tsconfig.preload.json --watch",
    "start:electron": "wait-on dist/main/index.js dist/preload/index.js && cross-env VITE_DEV_SERVER_URL=http://localhost:5174 nodemon --watch dist/main --watch dist/preload --exec \"electron .\"",
    "dev:renderer": "vite --config vite.config.ts",
    "build": "run-p build:main build:preload build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build:renderer": "vite build",
    "lint": "eslint --ext .ts,.tsx src"
  },
  "dependencies": {
    "axios": "^1.7.1",
    "axios-cookiejar-support": "^5.0.1",
    "chokidar": "^3.6.0",
    "electron": "^30.0.0",
    "electron-store": "^8.1.0",
    "form-data": "^4.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tough-cookie": "^4.1.4"
  },
  "devDependencies": {
    "@types/node": "^20.14.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "nodemon": "^3.1.4",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5",
    "vite": "^5.2.11",
    "wait-on": "^7.0.2",
    "@types/tough-cookie": "^4.0.5"
  }
}

