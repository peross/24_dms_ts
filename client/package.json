{
  "name": "dms-client",
  "version": "0.1.0",
  "description": "Desktop client for the document management system",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "run-p watch:main watch:preload dev:renderer start:electron",
    "watch:main": "tsc -p tsconfig.main.json --watch",
    "watch:preload": "tsc -p tsconfig.preload.json --watch",
    "start:electron": "wait-on dist/main/index.js dist/preload/index.js && cross-env VITE_DEV_SERVER_URL=http://localhost:5174 nodemon --watch dist/main --watch dist/preload --exec \"electron .\"",
    "dev:renderer": "vite --config vite.config.ts",
    "build": "run-p build:main build:preload build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build:renderer": "vite build",
    "lint": "eslint --ext .ts,.tsx src",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.yourcompany.dmsclient",
    "productName": "DMS Client",
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "extraResources": [
      {
        "from": "client-data",
        "to": "client-data",
        "filter": [
          "settings.json"
        ]
      }
    ],
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Office"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico"
    }
  },
  "dependencies": {
    "@radix-ui/react-select": "^2.2.6",
    "axios": "^1.7.1",
    "axios-cookiejar-support": "^5.0.1",
    "chokidar": "^3.6.0",
    "electron-store": "^8.1.0",
    "form-data": "^4.0.0",
    "pdf-lib": "^1.17.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "socket.io-client": "^4.7.5",
    "tough-cookie": "^4.1.4"
  },
  "devDependencies": {
    "@types/node": "^20.14.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/socket.io-client": "^1.4.36",
    "@types/tough-cookie": "^4.0.5",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^30.0.0",
    "electron-builder": "^26.0.12",
    "eslint": "^8.57.0",
    "nodemon": "^3.1.4",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5",
    "vite": "^5.2.11",
    "wait-on": "^7.0.2"
  }
}
